<!-- Menu Wrapper -->
<div>

    <!-- Navigation panel -->
    <nav class=" mn-centered not-top pb-20 pt-20 mb-30" style="z-index: 2; background-color: #ccc;">
        <div class="relative clearfix">
            
            <div class="nav-logo-wrap local-scroll" style="margin-left: 20px;">
                <%= link_to(root_path, class: "logo", method: :get, style: "height: 35px;" ) do %>
                    <img src=<%= image_path("logo-white.png") %> style="height: 35px;" alt="NSOJ Post" />
                <%end%>
            </div>
            <div class="mobile-nav">
                <i class="fa fa-bars"></i>
            </div>
            
            <!-- Main Menu -->
            <div class="inner-nav desktop-nav">
                <ul class="clearlist" style="padding: 8px 0;">
                    <li style="cursor: pointer;">
                        <%if @category_id.blank?%>
                            <a href=<%=stories_path%> style="font-weight: bold; color: #ffffff;">HOME</a>
                        <%else%>
                            <a href=<%=stories_path%> style="font-weight: bold; color: #b50000;">HOME</a>
                        <%end%>
                    </li>
                    <%@story_categories.each do |story_category|%>    
                        <li>
                            <%if @category_id.to_i == story_category.id.to_i %>
                                <a href="/stories?category_id=<%=story_category.id%>" style="color: #ffffff; font-weight: bold;"><%=story_category.title%></a>
                            <%else%>
                                <a href="/stories?category_id=<%=story_category.id%>" style="color: #b50000; font-weight: bold;"><%=story_category.title%></a>
                            <%end%>
                        </li>
    
                    <%end%>
                    <li></li>
                </ul>
            </div>
            <!-- End Main Menu -->
        </div>
    </nav>
    <!-- End Navigation panel -->
</div>
<!-- End Menu Wrapper -->


<!-- Section -->
<section class="small-section" style="padding: 0;">
    <div class="container relative" style="width: 90%">
        <%if @categoryMode == false%>
            <div class="row mb-10">
                
                <div class="col-sm-12" style="padding: 0;">
                    <div class="row" style="margin: 0 0 20px 0;">
                        <%n = @main_stories.length >= 5 ? 5 : @main_stories.length%>
                        <%story = @main_stories[0]%>
                        <div class="col-md-6">
                            <div class="blog-media mb-10 mb-xs-20">
                                <ul class="clearlist blog-posts-carousel-alt" style="height: 320px;">
                                    <li>
                                        
                                        <a href=<%=story_path(story)%>><img style="height: 320px;" src="<%=story.blog_image.file? ? story.blog_image.url : ''%>" /></a>
                                        
                                        <!-- Slide Info -->
                                        <div class="blog-slide-info" style="padding: 10px;">
                                            
                                            <h2 class="blog-slide-title font-alt mt-0" style="text-transform: none; font-size: 13px;"><a href=<%=story_path(story)%>><%=story.title%></a></h2>
                                            
                                            <div class="blog-slide-data">
                                                <a href="#"><i class="fa fa-clock-o" style="font-size: 11px;"></i> <%=local_time(story.created_at, "%d %b")%></a>
                                                <!-- <span class="separator">&nbsp;</span> -->
                                                <i class="fa fa-user"></i> 
                                                <%story.students.each do |student|%>
                                                    <a href=<%=student_path(student)%> style="font-size: 11px;"> <%=student.user.name%></a>
                                                <%end%>
                                                <!-- <span class="separator">&nbsp;</span>
                                                <a href="/stories?category_id=<%=story.story_category.id%>" style="font-size: 11px;"><%=story.story_category.title%></a> -->
                                            </div>
                                        </div>
                                        <!-- End Slide Info -->
                                        
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <%(n-1).times do |i|%>
                        <%story = @main_stories[i]%>
                        <div class="col-md-3">
                            
                            <!-- Post Slider -->
                            <div class="col-md-12" style="padding: 0 10px 0 0;">
                                <div class="blog-media mb-10 mb-xs-20">
                                    <ul class="clearlist blog-posts-carousel-alt" style="height: 155px;">
                                        <li>
                                            
                                            <a href=<%=story_path(story)%>><img style="height: 155px;" src="<%=story.blog_image.file? ? story.blog_image.url : ''%>" /></a>
                                            
                                            <!-- Slide Info -->
                                            <div class="blog-slide-info" style="padding: 10px;">
                                                
                                                <h2 class="blog-slide-title font-alt mt-0" style="text-transform: none; font-size: 13px;"><a href=<%=story_path(story)%>><%=story.title%></a></h2>
                                                
                                                <div class="blog-slide-data">
                                                    <a href="#"><i class="fa fa-clock-o" style="font-size: 11px;"></i> <%=local_time(story.created_at, "%d %b")%></a>
                                                    <!-- <span class="separator">&nbsp;</span> -->
                                                    <i class="fa fa-user"></i> 
                                                    <%story.students.each do |student|%>
                                                        <a href=<%=student_path(student)%> style="font-size: 11px;"> <%=student.user.name%></a>
                                                    <%end%>
                                                    <!-- <span class="separator">&nbsp;</span>
                                                    <a href="/stories?category_id=<%=story.story_category.id%>" style="font-size: 11px;"><%=story.story_category.title%></a> -->
                                                </div>
                                            </div>
                                            <!-- End Slide Info -->
                                            
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <!-- End Post Slider -->
                        <%if n == 1%>
                        </div>
                        <div class="col-md-3">
                        <%end%>
                        </div>
                        <%end%>    
                        
                    </div>
                </div>
                
            </div>
            <div class="col-md-9">
            <%@story_categories.each do |story_category|%>
                <%@grouped_stories = Story.all.where(story_category_id: story_category.id).order(created_at: :desc, last_accessed_at: :desc)%>
                <%if @grouped_stories.length > 0%>
                <div class="row">
                    <h3 class="blog-item-title font-alt mb-10"><a href="/stories?category_id=<%=story_category.id%>"><%=story_category.title%></a></h3>
                        
                    <hr class="mt-0 mb-30" />
                    
                    <!-- Blog Posts -->
                    <div class="row multi-columns-row">
                        <%n = @grouped_stories.length >= 4 ? 4 : @grouped_stories.length%>
                        <%n.times do |i|%>
                        <%grouped_story = @grouped_stories[i]%>
                        <!-- Post Item -->
                        <div class="col-md-3 col-lg-3 mb-30">
                            
                            <div class="post-prev-img">
                                <a href=<%=story_path(grouped_story)%>><img src="<%=grouped_story.blog_image.file? ? grouped_story.blog_image.url : ''%>" alt="" /></a>
                            </div>
                            
                            <div class="post-prev-title font-alt">
                                <a href=<%=story_path(grouped_story)%>><%=grouped_story.title%></a>
                            </div>
                            
                            <div class="post-prev-info font-alt">
                                <%grouped_story.students.each do |student|%>
                                    <a href=<%=student_path(student)%>><%=student.user.name%></a> 
                                <%end%> | <%=local_time(grouped_story.created_at, '%d %b')%>
                            </div>
                            
                            <div class="post-prev-text">
                                <%=grouped_story.content[0..150]%> ... 
                            </div>
                            
                            <div class="post-prev-more">
                                <a href=<%=story_path(grouped_story)%> class="btn btn-mod btn-gray btn-round">Read More <i class="fa fa-angle-right"></i></a>
                            </div>
                            
                        </div>
                        <!-- End Post Item -->
                        <%end%>
                        
                    </div>
                    <!-- End Blog Posts -->
                    
                    <!-- Post Small Previews -->
                    <div class="row mb-70">
                        
                        <div class="row">
                        <%n = @grouped_stories.length >= 6 ? 6 : @grouped_stories.length%>
                        <%n.times do |i|%>
                        <%grouped_story = @grouped_stories[i]%>
                            <div class="col-md-3">
                            <div class="blog-post-prev-small clearfix">
                                <a href=<%=story_path(grouped_story)%>><img width="70" height="70" src="<%=grouped_story.blog_image.url(:thumb)%>" alt="" class="widget-posts-img" /></a>
                                <div class="widget-posts-descr">
                                    <a href=<%=story_path(grouped_story)%> title=""><%=grouped_story.title%></a>
                                    Posted by 
                                    <%grouped_story.students.each do |student|%>
                                    <a href=<%=student_path(student)%>><%=student.user.name%></a> 
                                <%end%> | <%=local_time(grouped_story.created_at, '%d %b')%>
                                </div>
                            </div>
                            </div>
                        <%if i > 0 && i % 3 == 0%>
                        </div>
                        <div class="row">
                        <%end%>
                        <%end%>
                        </div>
                        
                    </div>
                    <!-- End Post Small Previews -->
                    <div class="col-md-4"></div>
                </div>
                <%end%>
            <%end%>
            </div>

            <!-- Sidebar Widget -->
            <div class="col-sm-3 sidebar mt-0" style="padding-left: 30px;">
                
                <!-- Widget -->
                <div class="widget">
                    
                    <div class="widget-body">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs tpl-tabs animate">
                            <li class="active">
                                <a href="#one" data-toggle="tab">Popular</a>
                            </li>
                            <li>
                                <a href="#two" data-toggle="tab">Latest</a>
                            </li>
                        </ul>
                        
                        <!-- Tab panes -->
                        <div class="tab-content tpl-tabs-cont section-text">
                            <div class="tab-pane fade in active" id="one">
                                <%n = @popular_stories.length >= @sidebar_length ? @sidebar_length : @popular_stories.length%>
                                <%n.times do |i|%>
                                <%story = @popular_stories[i]%>
                                <ul class="clearlist widget-posts">
                            
                                    <!-- Preview item -->
                                    <li class="clearfix">
                                        <a href=<%=story_path(story)%>><img height="70" width="70" src="<%=story.blog_image.file? ? story.blog_image.url(:thumb) : ''%>" alt="" class="widget-posts-img" /></a>
                                        <div class="widget-posts-descr">
                                            <a href=<%=story_path(story)%> title=""><%=story.title%></a>
                                            <div>
                                                <%story.students.each do |student|%><%=student.user.name%> <%end%> | <%=local_time(story.created_at, '%d %b')%>
                                            </div>
                                        </div>
                                    </li>
                                    <!-- End Preview item -->

                                </ul>
                                <%end%>
                            </div>
                            <div class="tab-pane fade" id="two">
                                <%n = @latest_stories.length >= @sidebar_length ? @sidebar_length : @latest_stories.length%>
                                <%n.times do |i|%>
                                <%story = @latest_stories[i]%>
                                <ul class="clearlist widget-posts">
                            
                                    <!-- Preview item -->
                                    <li class="clearfix">
                                        <a href=<%=story_path(story)%>><img height="70" width="70" src="<%=story.blog_image.file? ? story.blog_image.url(:thumb) : ''%>" alt="" class="widget-posts-img" /></a>
                                        <div class="widget-posts-descr">
                                            <a href=<%=story_path(story)%> title=""><%=story.title%></a>
                                            <div>
                                                <%story.students.each do |student|%><%=student.user.name%><%end%> | <%=local_time(story.created_at, '%d %b')%>
                                            </div>
                                        </div>
                                    </li>
                                    <!-- End Preview item -->

                                </ul>
                                <%end%>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <!-- End Widget -->
                
            </div>    
        <%else%>
        <!-- Category mode starts here-->
            <!-- <h2 class="section-title font-alt mb-70 mb-sm-40">
                <%=StoryCategory.find(@category_id.to_i).title%>
            </h2> -->
            <div class="row multi-columns-row">
                <%@grouped_stories = Story.all.where(story_category_id: @category_id).order(created_at: :desc, last_accessed_at: :desc)%>
                <%@grouped_stories.each_with_index do |story, i|%>
                <!-- Post Item -->
                <div class="col-md-3 col-lg-3 mb-30">
                    
                    <div class="post-prev-img">
                        <a href=<%=story_path(story)%>><img src="<%=story.blog_image.file? ? story.blog_image.url : ''%>" alt="" /></a>
                    </div>
                    
                    <div class="post-prev-title font-alt">
                        <a href=<%=story_path(story)%>><%=story.title%></a>
                    </div>
                    
                    <div class="post-prev-info font-alt">
                        <%story.students.each do |student|%>
                        <a href=<%=student_path(student)%>><%=student.user.name%></a> 
                        <%end%> | <%=local_time(story.created_at, '%d %b')%>
                    </div>
                    
                    <div class="post-prev-text">
                        <%=story.content[0..150]%> ... 
                    </div>
                    
                    <div class="post-prev-more">
                        <a href=<%=story_path(story)%> class="btn btn-mod btn-gray btn-round">Read More <i class="fa fa-angle-right"></i></a>
                    </div>
                    
                </div>
                <!-- End Post Item -->
                <%end%>
                
            </div>
        <%end%>
    </div>
</section>
<!-- End Section -->            

