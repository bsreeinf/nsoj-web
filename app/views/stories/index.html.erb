    <div class="container relative">
        
        <h2 class="section-title font-alt mb-70 mb-sm-40">
            Latest News
        </h2>
        
        <div class="row multi-columns-row">
            <%n = @latest_stories.length >= 4 ? 4 : @latest_stories.length%>
            <%n.times do |i|%>
            <%latest_story_bottom = @latest_stories[i]%>
            <!-- Post Item -->
            <div class="col-md-3 col-lg-3 mb-30">
                
                <div class="post-prev-img">
                    <a href=<%=story_path(latest_story_bottom)%>><img src="<%=latest_story_bottom.blog_image.file? ? latest_story_bottom.blog_image.url : ''%>" alt="" /></a>
                </div>
                
                <div class="post-prev-title font-alt">
                    <a href=<%=story_path(latest_story_bottom)%>><%=latest_story_bottom.title%></a>
