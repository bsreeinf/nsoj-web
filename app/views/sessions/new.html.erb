<!-- Page Loader -->        
<div class="page-loader">
    <div class="loader">Loading...</div>
</div>
<!-- End Page Loader -->    

<div id="home">
    <div class="row mt-50">
        <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
        <div class="col-md-6">
            <h2 class="section-title font-alt mb-70 mb-sm-40">
                <span style="color: #bf1c1c;">Existing user?</span> Login here
            </h2>
            <div class="col-md-8 col-md-offset-2">
                <%= form_for(:session, url: login_path, :html => {:class => 'form contact-form', :id => 'login_form'}) do |f| %>
                    <div class="clearfix">                                                  
                        <div class="form-group">
                            <%= f.text_field :email , :class => "input-md round form-control",:placeholder =>"Email", :pattern=>".{5,100}" %>
                        </div> 
                        <div class="form-group">                       
                            <%= f.password_field :password , :class => "input-md round form-control",:placeholder =>"Password", :pattern=>".{5,100}"%>
                        </div>
                    </div>
                    
                    <div class="clearfix form-tip">
                        <p style="font-size: 14px;"><%= link_to "Forgot password?", new_password_reset_path %></p>
                        <div class="align-right pt-10 form-group">
                            <%= f.submit "Login", :class => "submit_btn btn btn-mod btn-medium btn-round"%>
                        </div>              
                    </div>            
                    <div id="result"></div>
                <% end %>           
            </div>
        </div>
        <div class="col-md-6">
            <h2 class="section-title font-alt mb-70 mb-sm-40">
                Sign up
            </h2>
            <div class="col-md-8 col-md-offset-2">
                <%= form_for(User.new, :html => {:class => 'form contact-form', :id => 'signup_form'}) do |f| %>
                    <% #if @user.errors.any? 
                    if false %>
                    <div id="error_explanation">
                        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                        <ul>
                        <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                        </ul>
                    </div>
                <% end %>

                <div class="clearfix">   
                    <div class="form-group">
                        <%= f.text_field :name , :class => "input-md round form-control",:placeholder =>"Name", :required => true %>
                    </div> 

                    <div class="form-group">
                        <%= f.text_field :email , :class => "input-md round form-control",:placeholder =>"Email", :type => "email", :required => true %>
                    </div> 

                    <div class="form-group">
                        <%= f.text_field :phone , :class => "input-md round form-control",:placeholder =>"Phone", :type => "tel", :pattern=>".{5,100}",:required => true %>
                    </div>

                    <div class="form-group">
                        <%= f.text_field :city , :class => "input-md round form-control",:placeholder =>"City", :type => "text", :required => true %>
                    </div> 
                    
                    <div class="form-group">                       
                        <%= f.password_field :password , :class => "input-md round form-control",:placeholder =>"Password", :pattern=>".{5,100}",:required => true, :type => "password"%>
                    </div>
                    <div class="form-group">                       
                        <%= f.password_field :password_confirmation , :class => "input-md round form-control",:placeholder =>"Confirm Password", :pattern=>".{5,100}",:required => true, :type => "password"%>
                    </div>
                </div>
                    
                <div class="clearfix">

                    <div class="align-left pt-10 form-group">
                        <p class="font-alt" style="  font-size:10px;   padding-left: 15px;">* All fields are mandatory</p>
                    </div> 

                    <div class="align-right pt-10 form-group">
                        <!-- <button class="submit_btn btn btn-mod btn-medium btn-round" id="submit_btn">Submit Message</button> -->
                        <%= f.submit "Sign Up", :class => "submit_btn btn btn-mod btn-medium btn-round"%>
                    </div>         
                      
                </div>            
                    
                <div id="result"></div>
                <% end %>

            </div>
        </div>
    </div>
</div>


