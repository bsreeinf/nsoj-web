<style>
    .works-filter a.active:hover {
        cursor: pointer;
    }
    .widget-menu li a.active {
        color: white;
        background-color: #ccc;
    }
</style>
    <section class="small-section pb-0 pt-0" style="margin-top: 90px;">
        <div class="container align-center">
            <div class="mb-10">
                <img src=<%=asset_path('logo-footer.png')%> width="78" height="36" alt="" />
            </div>
            <h1 class="magazine-logo-text black font-alt">Gallery</h1>
        </div>
    </section>


    <section class="page-section pb-0">
        <div class="container relative" style="width: 90%;"> 
            <div class="row">

                <!-- Sidebar -->
                <div class="col-sm-4 col-md-3 sidebar">
                                        
                    <!-- Widget -->
                    <div class="widget">
                        
                        <!-- <h5 class="widget-title font-alt">Categories</h5> -->
                        <div class="works-filter widget-body" style="text-align: left !important;">
                            <ul class="clearlist widget-menu">
                                
                                <% Event.all.order("created_at DESC").each do |event, index| %>
                                <li>
                                    <%if index==0%>
                                        <a href="#" style="margin: 0 2px 5px 0; padding: 5px 7px; border: 1px solid #e9e9e9; text-transform: capitalize;" class="filter left active" data-filter=".event_<%=event.id%>"><%=event.title%></a>
                                    <%else%>
                                        <a href="#" style="margin: 0 2px 5px 0; padding: 5px 7px; border: 1px solid #e9e9e9; text-transform: capitalize;" class="filter left" data-filter=".event_<%=event.id%>"><%=event.title%></a>
                                    <%end%>
                                </li>
                                <%end %>
                            </ul>
                        </div>
                    </div>                    
                </div>
                <!-- End Sidebar -->
                
                <!-- Content -->
                <div class="col-sm-8">
                    <ul class="works-grid clearfix font-alt hover-white hide-titles masonry" id="work-grid">
                        <% EventDatum.all.order("created_at DESC").each do |event_datum, index| %>
                            <li class="work-item mix event_<%=event_datum.event_id%>">
                                <a href="<%=event_datum.image.url%>" class="work-lightbox-link mfp-image">
                                    <div class="work-img">
                                        <img src="<%=event_datum.image.url(:medium)%>" alt="National School of Journalism, Bangalore" />
                                    </div>
                                    <div class="work-intro">
                                        <h3 style="text-transform: capitalize;" class="work-title"><%=event_datum.tag%></h3>
                                    </div>
                                </a>
                            </li>
                            
                        <%end %>

                    </ul>
                </div>
                
            </div>              
            
        </div>
    </section>
