    <!-- Home Section -->
    <section class="small-section bg-dark-alfa-30 parallax-2" data-background=<%= asset_path("full-width-images/NSOJ_Journalism_School1.gif")%> style='margin-top: 75px; background-image:url(<%= asset_path("full-width-images/NSOJ_Journalism_School1.gif")%>)'>
        <div class="relative container align-left">
            
            <div class="row">
                
                <div class="col-md-8">
                    <h1 class="hs-line-11 font-alt mb-20 mb-xs-0"><img src=<%= image_path("logo-footer.png") %> width="78" height="36" alt="" /> Gallery</h1>
                    <div class="hs-line-4 font-alt">
                        <!-- An eye for detail makes our works excellent -->
                    </div>
                </div>
                
              
            </div>
            
        </div>
    </section>
    <!-- End Home Section -->






    <!-- Portfolio Section -->
    <section class="page-section pb-0">
        <div class="relative">
            
            <!-- Works Filter -->                    
            <div class="works-filter font-alt align-center">
                <% Event.all.each do |event, index| %>
                    <%if index==0%>
                        <a href="#" class="filter active" data-filter=".event_<%=event.id%>"><%=event.title%></a>
                    <%else%>
                        <a href="#" class="filter" data-filter=".event_<%=event.id%>"><%=event.title%></a>
                    <%end%>
                <%end %>
            </div>                    
            <!-- End Works Filter -->
            
            <!-- Works Grid -->
            <ul class="works-grid clearfix font-alt hover-white hide-titles masonry" id="work-grid">
                <!--  ********************** round table *****************************  -->
                <!-- Work Item (Lightbox) -->
                <% EventDatum.all.each do |event_datum, index| %>
                    <li class="work-item mix event_<%=event_datum.event_id%>">
                        <a href="<%=event_datum.image.url%>" class="work-lightbox-link mfp-image">
                            <div class="work-img">
                                <img src="<%=event_datum.image.url(:medium)%>" alt="Work" />
                            </div>
                            <div class="work-intro">
                                <h3 class="work-title"><%=event_datum.tag%></h3>
                                <!-- <div class="work-descr">
                                    Lightbox
                                </div> -->
                            </div>
                        </a>
                    </li>
                    
                <%end %>
                
                <!-- End Work Item --> 

                <!-- **************************************   end of round tabel images ******************************************************  --> 




            </ul>
            <!-- End Works Grid -->
            
        </div>
    </section>
    <!-- End Portfolio Section -->

