            <img src=<%=asset_path('logo-footer.png')%> width="78" height="36" alt="" />
        </div>
    
        <h1 class="magazine-logo-text black font-alt">NSoJ E-Paper</h1>
        
    </div>
       
</section>
    <!-- End Home Section -->
    <hr class="mt-0 mb-30" />


    <!-- Portfolio Section -->
