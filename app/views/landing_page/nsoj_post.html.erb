                <%end%>
            </div>
            <div class="mobile-nav">
                <i class="fa fa-bars"></i>
            </div>
            
            <!-- Main Menu -->
            <div class="inner-nav desktop-nav">
                <ul class="clearlist scroll-nav local-scroll">
                    <%if @category_id.blank?%>
                        <%if params[:controller] == 'landing_page' && params[:action] == 'nsoj_post'%>
                            <li style="cursor: pointer;">
                                <a href=<%=stories_path%>>HOME</a>
                            </li>
                            <li style="cursor: pointer;">
                                <a href="/nsoj_post" style="font-weight: bold; color: red;">E-PAPER</a>
