        <div class="home-content">
            <div class="home-text">
                <div class="row mt-60 mt-xs-20">
                    
                    <div class="col-sm-9 col-lg-9  pt-20 pt-lg-0 mb-xs-30">
                        <!-- <div class="hs-line-4 font-alt mb-20">Thomas Rhythm</div> -->
                        <h1 class="hs-line-15 font-alt mb-40 mb-xs-20"><%=@student.user.name%></h1>
                        <div class="section-text white mb-70 mb-xs-40 text-justify">
