<!-- Menu Wrapper -->
<div>

    <!-- Navigation panel -->
    <nav class=" mn-centered not-top pb-20 pt-20 mb-30" style="z-index: 2; background-color: #ccc;">
        <div class="relative clearfix">
            
            <div class="nav-logo-wrap local-scroll" style="margin-left: 20px;">
                <%= link_to(root_path, class: "logo", method: :get, style: "height: 35px;" ) do %>
                    <img src=<%= image_path("logo-white.png") %> style="height: 35px;" alt="NSOJ Post" />
                <%end%>
            </div>
            <div class="mobile-nav">
                <i class="fa fa-bars"></i>
            </div>
            
            <!-- Main Menu -->
            <div class="inner-nav desktop-nav">
                <ul class="clearlist" style="padding: 8px 0;">
                    <li style="cursor: pointer;">
                        <%if @category_id.blank?%>
                            <a href=<%=stories_path%> style="font-weight: bold; color: #ffffff;">HOME</a>
                        <%else%>
                            <a href=<%=stories_path%> style="font-weight: bold; color: #b50000;">HOME</a>
                        <%end%>
                    </li>
                    <%@story_categories.each do |story_category|%>    
                        <li>
                            <%if @category_id.to_i == story_category.id.to_i %>
                                <a href="/stories?category_id=<%=story_category.id%>" style="color: #ffffff; font-weight: bold;"><%=story_category.title%></a>
                            <%else%>
                                <a href="/stories?category_id=<%=story_category.id%>" style="color: #b50000; font-weight: bold;"><%=story_category.title%></a>
                            <%end%>
                        </li>
    
                    <%end%>
                    <li></li>
                </ul>
            </div>
            <!-- End Main Menu -->
        </div>
    </nav>
    <!-- End Navigation panel -->
</div>
<!-- End Menu Wrapper -->

<section class="page-section bg-dark bg-dark-alfa-70 pt-40 pb-40" id="home">
    <div class="relative container">

        
        <!-- Hero Content -->
        <div class="home-content">
            <div class="home-text">
                <div class="row mt-60 mt-xs-20">
                    
                    <div class="col-sm-9 col-lg-9  pt-20 pt-lg-0 mb-xs-30">
                        <!-- <div class="hs-line-4 font-alt mb-20">Thomas Rhythm</div> -->
                        <h1 class="hs-line-15 font-alt mb-40 mb-xs-20"><%=@student.user.name%></h1>
                        <div class="section-text white mb-70 mb-xs-40 text-justify">
                        	<%if @student.bio == nil%>
                        		<p></p>
                        	<%else%>
	                            <p>
	                                <%if @student.bio.length > 1 %>
                                        <span class="dropcap font-alt"><%=@student.bio[0..0]%></span><%= @student.bio[1..-1].gsub(/\n/,'<br>').html_safe %>
                                    <%end%>
	                            </p>
	                        <%end%>
	                        <!-- <br><br><br>
                            <hr class="white mb-30">
                            <div>
                                <h4 class="font-alt mt-0 mb-20">Profile</h4>
                                <div>
                                    <strong>Param: number</strong>
                                    NUM
                                </div>
                            </div> -->
                        </div>
                    </div>
                    
                    <div class="col-sm-3 col-lg-2 col-lg-offset-1 mt-40">
                        <img src="<%= @student.avatar.file? ? @student.avatar.url : asset_path("faculty/anon.png")%>" style="max-width:200px; -webkit-filter: grayscale(100%); filter: grayscale(100%);" class="img-circle"/>
                    </div>
                    
                </div>
            </div>
        </div>
        <!-- End Hero Content -->

    </div>
</section>
<!-- End Home Section

<!-- Section -->
<%if @student_stories.length >0%>
<section class="small-section pb-0">
    
    <div class="container align-center">
        
        <!-- <div class="mb-10">
            <img src=<%= image_path("logo-footer.png") %> width="45" height="24" alt="" />
        </div> -->
        
        <h1 class="magazine-logo-text black font-alt">Stories</h1>
        
    </div>
    
</section>
<!-- End Section -->


<!-- Section -->
<section class="small-section pt-30">
    <div class="container relative">
        
        <div class="row">
            
            <div class="row multi-columns-row">
                <%@student_stories.each_with_index do |story, i|%>
                <!-- Post Item -->
                <div class="col-md-3 col-lg-3 mb-30">
                    
                    <%if story.blog_image.file?%>
                    <div class="post-prev-img">
                        <a href=<%=story_path(story)%>><img src="<%=story.blog_image.url%>" alt="" /></a>
                    </div>
                    <%end%>
                    
                    <div class="post-prev-title font-alt">
                        <a href=<%=story_path(story)%>><%=story.title%></a>
                    </div>
                    
                    <div class="post-prev-info font-alt">
                        <a href=<%=student_path(story.student)%>><%=story.student.user.name%></a> | <%=local_time(story.created_at, '%d %b')%>
                    </div>
                    
                    <div class="post-prev-text">
                        <%=story.content[0..150]%> ... 
                    </div>
                    
                    <div class="post-prev-more">
                        <a href=<%=story_path(story)%> class="btn btn-mod btn-gray btn-round">Read More <i class="fa fa-angle-right"></i></a>
                    </div>
                    
                </div>
                <!-- End Post Item -->
                <%end%>
                
            </div>
            
        </div>
        
    </div>
</section>
<%end%>
<!-- End Section -->