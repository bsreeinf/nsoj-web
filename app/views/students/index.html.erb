      <!-- End Head Section -->
            
            
      <!-- Section -->
      <section class="page-section" style="background: rgba(34,34,34, .9);" style="padding: 90px 0;">
        <div class="container relative">
            
          <!-- Features Grid -->
          <div class="row multi-columns-row alt-features-grid">
                <% @students.each do |student|%>
                  <a class="student-box col-sm-4 col-md-3 col-lg-3" href="<%=student_path(student)%>">
                      <div class="alt-features-item align-center">
                          <div class="alt-features-icon">
                              <img  src="<%= student.avatar.file? ? student.avatar.url(:thumb) : asset_path("faculty/anon.png")%>" style="max-width:120px;" class="img-circle">
                          </div>
                          <h2 class="alt-features-title font-alt"><%= student.user.name %></h2>
                          <div class="alt-features-descr align-left">
                              <%= (student.bio == nil ? "" : "#{student.bio[0..280]} #{student.bio.length > 280 ? "..." : ""}").gsub(/\n/,"</br>").html_safe %>
                          </div>
                      </div>
                  </a>
                <%end%>
            </div>
            <!-- End Features Grid -->
        
        </div>
    </section>
    <!-- End Features Section -->


