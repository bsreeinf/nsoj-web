<style>
  .student-box{
    border: 1px solid transparent;
    /*box-shadow: 2px 2px 10px transparent;*/
    padding-bottom: 40px;
    cursor: pointer;
    /*background-color: #fff4df;*/
  }
  .student-box:hover{
    border: 1px solid #e4e4e4;
    /*box-shadow: 2px 2px 10px #adadad;*/
    cursor: pointer;
    /*background-color: #fff4df;*/
  }
  .alt-features-item{
    margin-top: 20px; 
    cursor: pointer;
  }
  .alt-features-title{
    color: wheat;
    font-weight: 400;
    text-decoration: none;
    cursor: pointer;
  }
  .alt-features-descr{
    color: white;
    text-decoration: none;
    cursor: pointer;
  }
  a:hover{
    text-decoration: none;
    cursor: pointer;
  }
</style>
<script>
    document.title = "NSoJ - Our Student Journalists"
</script>    

<section class="small-section bg-gray-lighter" style="padding: 20px 0;">
    <div class="relative container align-center">
      <h1 class="hs-line-11 font-alt">Our Student Journalists</h1>
    </div>
</section>

<section class="page-section" style="background: rgba(34,34,34, .9);" style="padding: 90px 0;">
  <div id="home">
    <div class="row multi-columns-row alt-features-grid">
          <% @students.each do |student|%>
            <a class="student-box col-sm-4 col-md-3 col-lg-3" href="<%=student_path(student)%>">
                <div class="alt-features-item align-center">
                    <div class="alt-features-icon">
                        <img  src="<%= student.avatar.file? ? student.avatar.url(:thumb) : asset_path("faculty/anon.png")%>" style="max-width:120px;" class="img-circle">
                    </div>
                    <h2 class="alt-features-title font-alt"><%= student.user.name %></h2>
                    <div class="alt-features-descr" style="text-align: justify !important;">
                        <%= (student.bio == nil ? "" : "#{student.bio[0..280]} #{student.bio.length > 280 ? "..." : ""}").gsub(/\n/,"</br>").html_safe %>
                    </div>
                </div>
            </a>
          <%end%>
      </div>
  </div>
</section>


