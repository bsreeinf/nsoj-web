<div style='padding-top:75px;'></div>
    <!-- Head Section -->
      <section class="small-section bg-gray-lighter" style="padding: 20px 0;">
          <div class="relative container align-left">
              
              <div class="row">
                  
                  <div class="col-md-8">
                      <h1 class="hs-line-11 font-alt mb-20 mb-xs-0">Our Student Journalists</h1>
