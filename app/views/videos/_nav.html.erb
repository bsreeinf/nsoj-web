<div class="clearfix video-nav">
    <div class="home-container">
        <a href="videos" class="nav-item <%= @category.nil? ? "active" : ""%>">ALL</a>
        <% @video_categories.each do |category, index| 
            status = (!@category.nil? && @category.id == category.id) ? "active" : ""
        %>
            <a href="videos?vc=<%=category.title.downcase%>" class="nav-item <%=status%>">
                <%=category.title%>
            </a>
        <%end %>
    </div>
</div>